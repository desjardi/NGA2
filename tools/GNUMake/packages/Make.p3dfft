# Add appropriate P3DFFT includes and libraries
ifdef P3DFFT_DIR
  ifndef FFTW_DIR
    $(error FFTW required for P3DFFT)
  endif
  INCLUDE_LOCATIONS += $(P3DFFT_DIR)/include
  LIBRARY_LOCATIONS += $(P3DFFT_DIR)/lib
  LIBRARIES += -lp3dfft.3 -lfftw3 -lfftw3f -lstdc++
else
  $(error P3DFFT_DIR not defined, but it is currently required by NGA2)
endif

